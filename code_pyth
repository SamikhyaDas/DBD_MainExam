import streamlit as st
from textblob import TextBlob
from collections import Counter
import re

# --- Title & Instructions ---
st.set_page_config(page_title="Customer Feedback Analyzer")
st.title("游 Customer Feedback Analyzer")
st.markdown("Paste customer feedback (one per line) below and click **Analyze Feedback** to see sentiment insights and keyword trends.")

# --- Input Area ---
feedback_input = st.text_area("游닌 Enter Feedback (one comment per line):", height=250)

# --- Analyze Button ---
if st.button("游댌 Analyze Feedback"):
    if not feedback_input.strip():
        st.warning("Please enter some feedback to analyze.")
    else:
        feedback_lines = feedback_input.strip().split("\n")

        sentiments = []
        all_words = []

        for line in feedback_lines:
            blob = TextBlob(line)
            polarity = blob.sentiment.polarity

            if polarity > 0.1:
                sentiments.append(("游릭 Positive", line))
            elif polarity < -0.1:
                sentiments.append(("游댮 Negative", line))
            else:
                sentiments.append(("游리 Neutral", line))

            words = re.findall(r'\b\w+\b', line.lower())
            all_words.extend(words)

        sentiment_count = Counter([s[0] for s in sentiments])
        word_freq = Counter(all_words).most_common(10)

        # --- Summary Section ---
        st.subheader("游늵 Sentiment Summary")
        st.write(f"游릭 Positive: {sentiment_count['游릭 Positive']}")
        st.write(f"游리 Neutral: {sentiment_count['游리 Neutral']}")
        st.write(f
